source 'https://rubygems.org'

# For Capturing Packets
gem 'packetfu'

# For insertion into the Elasticsearch Database
gem 'elasticsearch'

# For parsing the documentation
gem 'yard'

# For Logging
gem 'semantic_logger'

# For scheduling the diagnostic output
gem 'rufus-scheduler'

group :development do
  # RuboCop
  gem 'rubocop'
  # For profiling method calls
  gem 'method_profiler'
end

group :test do
  gem 'simplecov', require: false
  gem 'rspec'
end